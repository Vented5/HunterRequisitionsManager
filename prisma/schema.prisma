model Budgets {
  id Int @id @default(autoincrement())
  name String @default("First quarter")
  ammount Int
  createdAt DateTime @default(now())
  updatedAt DateTime?
  creator Users @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId Int 
}

model Providers {
  id Int @id @default(autoincrement())
  name String?
  email String?
  website String?
  phone Int
  requisitions Requisitons[]
}

model Inventories {
  id Int @id @default(autoincrement())
}
