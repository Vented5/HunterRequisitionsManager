generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String? 
  pwd String?
  email String @unique
  role String?
  accessLvl Int
  requisitions Requisitons[] @relation("requested")
  //validated Requisitons[] @relation("validated")
}

model Departments{
  id Int @id @default(autoincrement())
  name String?
}

model Budgets {
  id Int @id @default(autoincrement())
  ammount Int
  updatedAt DateTime
}

model Requisitons {
  id Int @id @default(autoincrement())
  status String @db.VarChar(20)
  createdAt DateTime @default(now())
  validatedAt DateTime?
  total Int 
  requisitor Users @relation("requested",fields: [requisitorId], references: [id])
  requisitorId Int
  //validator Users? @relation("validated", fields: [validatorId], references: [id])
  //validatorId Int?
}

model Items {
  id Int @id @default(autoincrement())
  name String?
  price Int
}

model Providers {
  id Int @id @default(autoincrement())
  name String?
  email String?
  website String?
  pgone Int
}

model Categories {
  id Int @id @default(autoincrement())
  name String?
}

model Inventories {
  id Int @id @default(autoincrement())
}
