generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Requisitons {
  id Int @id @default(autoincrement())
  status String @db.VarChar(20) @default("requested")
  createdAt DateTime @default(now())
  validatedAt DateTime?
  total Int 
  requisitor Users @relation("requested",fields: [requisitorId], references: [id], onDelete: Cascade)
  requisitorId Int
  description String?
  dueDate DateTime?
  justification String?
  provider Providers? @relation(fields: [providerId], references: [id])
  providerId Int?
  validator Users? @relation("validated", fields: [validatorId], references: [id])
  validatorId Int?
  department String?
  //department Departments? @relation(fields: [departmentId], references: [id])
  //departmentId Int?
  items Items[]
}

model Items {
  id Int @id @default(autoincrement())
  name String
  price Float
  category String?
  quantity Int
  requisitionId Int
  requisition Requisitons @relation(fields: [requisitionId], references: [id]) 
}

model Users {
  id Int @id @default(autoincrement())
  name String 
  pwd String
  email String @unique
  role String @default("Admin")
  accessLvl Int
  requisitions Requisitons[] @relation("requested")
  budgets Budgets[]
  validated Requisitons[] @relation("validated")
}


